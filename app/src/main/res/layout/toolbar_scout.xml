<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="18dp"
    android:id="@+id/layout_toolbar">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:background="?attr/colorPrimary"
        android:id="@+id/connectButton"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team Number"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_gravity="center"
            android:id="@+id/teamNumberView"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:maxLength="5"
            android:inputType="number"
            android:layout_gravity="center"
            android:id="@+id/teamNumberText"
            android:layout_below="@id/teamNumberView"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="Match Number"
            android:id="@+id/matchNumberView"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:maxLength="5"
            android:inputType="number"
            android:layout_gravity="center"
            android:id="@+id/matchNumberText"
            android:layout_below="@id/matchNumberView"
            />
    </RelativeLayout>
</LinearLayout>